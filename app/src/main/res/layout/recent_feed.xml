<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/grey_300">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="inoov_abhay"
            android:padding="5dp"
            android:id="@+id/userNameTextView"
            android:textColor="@color/black_1000"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_more_vert_black_24dp"
            android:drawableRight="@drawable/ic_more_vert_black_24dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/eular" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/play"
                android:id="@+id/playImage"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:background="@color/yellow_600"
                android:gravity="start"
                android:padding="3dp"
                android:textColor="@color/black_1000"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="This is my detail" />

            <TextView
                android:id="@+id/titileTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="start"
                android:background="#4D000000"
                android:padding="5dp"
                android:textColor="@color/white_1000"
                android:textSize="18sp"
                tools:text="This is me Shirom" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:textColor="@color/grey_600"
                android:gravity="center_vertical|start"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:text="Today" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:text="120"
                android:gravity="center_vertical|center_horizontal"
                android:letterSpacing=".08"
                android:padding="1dp" />

            <TextView
                android:id="@+id/likeTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/ic_thumb_up_black_24dp"
                android:gravity="center_vertical|center_horizontal"
                android:letterSpacing=".08"
                android:paddingEnd="3dp"
                android:padding="5dp"
                android:paddingRight="3dp" />

            <TextView
                android:id="@+id/commentDrawable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/ic_mode_comment_black_24dp"
                android:gravity="center_vertical|center_horizontal"
                android:letterSpacing=".08"
                android:paddingEnd="3dp"
                android:padding="5dp"
                android:paddingRight="3dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_weight=".05" />

            <TextView
                android:id="@+id/shareTextView"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/ic_share_black_24dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/white_1000"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>